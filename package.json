{
  "name": "hyperfocus-gift-engine",
  "private": true,
  "version": "1.0.0",
  "description": "React 19 TikTok Live Interactive Streaming System with PWA support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx,ts,tsx",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css}",
    "test": "vitest",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "react": "^19.0.0-beta",
    "react-dom": "^19.0.0-beta",
    "framer-motion": "^11.0.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
